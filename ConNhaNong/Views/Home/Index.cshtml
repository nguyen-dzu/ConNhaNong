@model IEnumerable<ConNhaNong.Models.product>

@{

    ViewBag.Title = "Home Page";
}
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
<script src="https://kit.fontawesome.com/47800f97b7.js" crossorigin="anonymous"></script>
<style>
    .img-home, .img-contact {
        display: none;
    }
</style>
<div class="title-product">
    <h4>CỬA HÀNG</h4>
    <h2>CON NHÀ NÔNG</h2>
    <div class="line"></div>
</div>
<section class="latest-product-area padding-bottom">
    <div class="container">
        <div class="row product-btn d-flex justify-content-end align-items-end">
            <!-- Section Tittle -->
            <div id="title-product" style="text-align:center;" class="col-xl-4 col-lg-5 col-md-5">
                <div id="name-product" class="section-tittle mb-30">
                    <h2>SẢN PHẨM MỚI NHẤT</h2>
                    <div style="background: #004012;" class="line"></div>
                </div>
            </div>
            @using (Html.BeginForm())
            {

                <p class="form-search">
                    @Html.TextBox("SearchString")
                    <input id="button-search" style="max-width: 15rem;" type="submit" value="Tìm Kiếm" />
                </p>
            }

        </div>
        <!-- Nav Card -->
        <div class="tab-content" id="nav-tabContent">
            <div class="row">
                <div class="card-deck">
                    <div class="row">
                        @foreach (var items in Model)
                        {
                            <div class="col-lg-3">
                                <div class="card mb-30">
                                    <!-- set a width on the image otherwise it will expand to full width       -->
                                    <img class="card-img-top img-fluid" src="~/Images/@items.file_names" alt="Card image cap" width="350" />
                                    <div class="card-body text-center">
                                        <h4 class="card-title">@items.name_product</h4>
                                        <p class="card-text">@items.price</p>
                                        @Html.ActionLink("Xem sản phẩm", "Details", "Product", new { id = items.ID.ToString() }, new { @class = "btn btn-success" })
                                    </div>
                                </div>

                            </div>
                            <div class="col-lg-1"></div>
                        }
                    </div>
                </div>
            </div>
            <!-- End Nav Card -->
        </div>
    </div>
</section>