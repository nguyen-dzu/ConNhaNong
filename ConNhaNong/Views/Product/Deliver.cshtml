@model  Tuple<ConNhaNong.Models.Bill_new, List<ConNhaNong.ViewModels.ProductViewModel>>

@{
    ViewBag.Title = "Deliver";
}
<script src="https://kit.fontawesome.com/47800f97b7.js" crossorigin="anonymous"></script>
<style>
    .img-home, .img-contact {
        display: none;
    }
</style>
<h2>Deliver</h2>
<h4 class="text-center"></h4>
<div class="row">
    <div class="col-lg-12">
        @foreach (var item in Model.Item2)
        {
            <div class="row">
                <div class="form-group">
                    <div class="col-md-12">
                        <h3>@item.Name_Product</h3>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <h3>Số lượng: @item.Amount</h3>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        <img class="card-img-top img-fluid" src="~/Images/@item.Image" alt="Card image cap" width="350" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        <h3>Tổng cộng: @item.Total</h3>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <h4>Bill_new</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Item1.name_bill, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Item1.name_bill, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Item1.name_bill, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Item1.addresz, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Item1.addresz, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Item1.addresz, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Item1.SDt, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Item1.SDt, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Item1.SDt, "", new { @class = "text-danger" })
                </div>
                <div class="text-danger">
                    @ViewBag.PhoneNumber
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <h4>Tổng đơn: @Model.Item1.total</h4>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>